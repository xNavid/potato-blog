
<%= render "shared/errors", obj: @category %>
<%= form_for(@category, :html => {class: "form", role: "form"}) do |f| %>
    
    <div class="form-group">
      <%= f.label :name, "Category Name" %>
      <%= f.text_field :name, class: "form-control", placeholder: "e.g. Sports", autofocus: true %>
    </div>
    
    <div class="form-group">
      <%= f.submit class: "btn btn-primary form-control" %>
    </div>
  
<% end %>